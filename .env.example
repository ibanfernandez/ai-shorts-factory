# Variables de entorno para YouTube IA Automate
# Copia este archivo a .env y completa con tus credenciales

# ===============================
# CONFIGURACIÓN DE CONTENIDO
# ===============================

# Idioma del contenido (es, en, pt, fr, it, de)
CONTENT_LANGUAGE=es

# Temática del canal (curiosidades, tecnologia, historia, ciencia, deportes)
CONTENT_THEME=curiosidades

# Voz TTS personalizada (opcional - se auto-detecta por idioma)
TTS_VOICE=es-ES-AlvaroNeural
TTS_VOICE_FEMALE=es-ES-ElviraNeural

# ===============================
# APIs DE INTELIGENCIA ARTIFICIAL
# ===============================

# OpenAI (para generación de contenido)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ElevenLabs (para texto a voz)
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL  # Voz en español (Rachel)

# ===============================
# YOUTUBE API
# ===============================

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret-here
YOUTUBE_CHANNEL_ID=your-channel-id-here

# ===============================
# APIS DE CONTENIDO MULTIMEDIA
# ===============================

# Unsplash (imágenes gratuitas)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# Pexels (videos gratuitos)
PEXELS_API_KEY=your-pexels-api-key

# ===============================
# BASE DE DATOS
# ===============================
DATABASE_URL=sqlite:///./data/youtube_automation.db

# ===============================
# CONFIGURACIÓN GENERAL
# ===============================

# Idioma del contenido
CONTENT_LANGUAGE=es
CONTENT_COUNTRY=ES

# Frecuencia de publicación
PUBLISH_SCHEDULE="0 10,18 * * *"  # 10:00 AM y 6:00 PM diario

# Configuración de video
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30
VIDEO_DURATION_MIN=300  # 5 minutos mínimo
VIDEO_DURATION_MAX=900  # 15 minutos máximo

# ===============================
# N8N CONFIGURACIÓN (OPCIONAL)
# ===============================

# N8N Webhook URLs
N8N_WEBHOOK_URL=http://localhost:5678/webhook/youtube-automation
N8N_API_KEY=your-n8n-api-key

# ===============================
# CONFIGURACIÓN DE DEBUG
# ===============================
DEBUG=True
LOG_LEVEL=INFO
SAVE_INTERMEDIATE_FILES=True

# ===============================
# PROXIES Y RATE LIMITING (OPCIONAL)
# ===============================
USE_PROXY=False
PROXY_URL=http://your-proxy:port
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60